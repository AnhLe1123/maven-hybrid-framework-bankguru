<?xml version="1.0" encoding="UTF-8"?>
<suite name="Payment - Bankguru" parallel="false">
    <parameter name="envName" value="local" />

    <listeners>
        <listener class-name="org.uncommons.reportng.HTMLReporter"/>
        <listener class-name="org.uncommons.reportng.JUnitXMLReporter"/>
        <listener class-name="reportConfig.MethodListener"/>
        <listener class-name="reportConfig.ReportNGListener"/>
    </listeners>

    <test name="Run on FIREFOX">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.bankguru.customer.New_Cus_01_Name_Email_Validation"/>
            <class name="com.bankguru.customer.New_Cus_02_Address_City_State_Validation"/>
            <class name="com.bankguru.customer.New_Cus_03_Pin_Telephone_Validation"/>
            <class name="com.bankguru.customer.New_Cus_04_Create_New_Customer"/>
            <class name="com.bankguru.customer.Edit_Cus_01_Customer_ID_Validation"/>
            <class name="com.bankguru.customer.Edit_Cus_02_Address_City_State_Validation"/>
            <class name="com.bankguru.customer.Edit_Cus_03_Pin_Telephone_Email_Validation"/>
        </classes>
    </test>
</suite>
